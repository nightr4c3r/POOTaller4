<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.taller3.Controllers.DashboardController">
    <top>
        <HBox spacing="16" style="-fx-background-color: purple; -fx-padding: 12;">
            <Label text="Motos Dashboard" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 24;">
            <HBox spacing="16" alignment="CENTER">
                <VBox alignment="CENTER" spacing="6" style="-fx-background-color: #ecf0f1; -fx-padding: 16; -fx-background-radius: 8;">
                    <Label text="Total motos" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                    <Label fx:id="motoCountLabel" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                </VBox>
            </HBox>

            <HBox spacing="12" alignment="CENTER">
                <Button fx:id="addMotoButton" text="Agregar Moto" onAction="#onAddMotoClick" style="-fx-background-color: purple; -fx-text-fill: white;" />
                <Button fx:id="viewMotosButton" text="Ver motos" onAction="#onShowAllClick" style="-fx-background-color: purple; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 8 16 8 16; -fx-background-color: #f7f7f7;">
            <Label text="Â© 2025 Taller3" style="-fx-text-fill: #7f8c8d;" />
        </HBox>
    </bottom>
</BorderPane>
